{% extends 'base.html.twig' %}

{% block body %}
    <h4 class="text-center pt-2">{{ examinee.firstName ~ ' ' ~ examinee.lastName }}'s test result</h4>

    <div class="m-2 pt-4">
        <table class="table table-responsive w-50 m-auto">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Test Taken At</th>
                <th scope="col">Percent</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for i, testResult in testResults %}
                <tr>
                    <th scope="row">{{ i + 1 }}</th>
                    <td>{{ testResult.testTakenAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ testResult.percent == testResult.percent // 1 ? testResult.percent|number_format(0) : testResult.percent|number_format(2, '.', '') }} %</td>
                    <td><a href="{{ path("admin_test_result_answers", {"testResultId": testResult.id}) }}" >View answers</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row fw-bold border-bottom">
            <div class="col-sm-6"></div>
            <div class="col-sm-4"></div>
            <div class="col-sm-2"></div>
        </div>

        {% for testResult in testResults %}
            <div class="row mt-1">
                <div class="col-sm-6"></div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <a href="</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}